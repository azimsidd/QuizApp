<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/stay_connected"
        android:textColor="@color/quiz_blue"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_subheading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nunito_bold"
        android:paddingEnd="100dp"
        android:text="@string/signup_subtitile"
        android:textAlignment="textStart"
        android:textColor="@color/quiz_blue"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_heading"
        app:layout_constraintTop_toBottomOf="@+id/tv_heading" />


    <EditText
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/form_fields_bg"
        android:fontFamily="@font/nunito_light"
        android:hint="@string/email"
        android:padding="12dp"
        android:textAlignment="textStart"
        android:textColor="@color/quiz_blue"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_subheading" />


    <EditText
        android:id="@+id/tv_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/form_fields_bg"
        android:fontFamily="@font/nunito_light"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textAlignment="textStart"
        android:textColor="@color/quiz_blue"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_email"
        app:layout_constraintStart_toStartOf="@+id/tv_email"
        app:layout_constraintTop_toBottomOf="@+id/tv_email" />


    <EditText
        android:id="@+id/tv_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/form_fields_bg"
        android:fontFamily="@font/nunito_light"
        android:hint="@string/confirm_password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textAlignment="textStart"
        android:textColor="@color/quiz_blue"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_password" />


    <RelativeLayout
        android:id="@+id/btn_SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/round_bg"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_confirm_password">

        <TextView
            android:id="@+id/btn_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/txt_sign_up"
            android:textColor="@color/white" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_already_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nunito_bold"
        android:padding="10dp"
        android:text="@string/txt_already_have_an_account"
        android:textAlignment="center"
        android:textColor="@color/quiz_blue"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/btn_SignUp"
        app:layout_constraintEnd_toEndOf="@+id/btn_SignUp"
        app:layout_constraintTop_toBottomOf="@+id/btn_SignUp" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_red_wave"
        android:scaleType="centerCrop"/>


</androidx.constraintlayout.widget.ConstraintLayout>